/**index.wxss**/
Page{
  background: #f0f3f6;
}
.pageHeader{
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  flex-direction: column;
  background: #ffffff;
  z-index: 1001
}
.filters{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
}
.filterItem{
  width:30%;
  text-align: center;
  font-size: 28rpx;
}
.filterItem .img{
  margin-left: 5rpx;
  width: 12rpx;
  height:12rpx;
}
.product-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  padding: 166rpx 0 15rpx 0;
  width: 100%;
  height: 176rpx;
}
.productItem{
  margin: 10rpx;
  width: 110rpx;
  height: 70prx;
  line-height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  color: #777777;
  border: 1px solid #fc8238;
  border-radius: 10rpx;
}
.productIdist{
  margin: 12rpx 10rpx;
  width: 180rpx;
  height: 70prx;
  line-height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  color: #777777;
  border: 1px solid #fc8238;
  border-radius: 10rpx;
}
.active{
  background: #fc8238;
  color: #ffffff;
}
.lineContent{
  margin: 150rpx 20rpx 0 20rpx;
  overflow-x: hidden;
}
.lineContent .item{
  position: relative;
  margin:20rpx;
}
.lineContent .item .tag{
  position: absolute;

}
.lineContent .item .img{
  width: 100%;
  height:466rpx;

}
.lineContent .item .img .imgs{
  width: 100%;

}