/**index.wxss**/
Page{
  background: #f0f3f6;
}
.pageHeader{
  position: fixed;
  display: flex;
  top: 0;
  width: 100%;
  flex-direction: column;
  background: #ffffff;
  z-index: 1001
}
.filters{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
}
.filterItem{
  width:30%;
  text-align: center;
  font-size: 28rpx;
}
.filterItem .img{
  margin-left: 5rpx;
  width: 12rpx;
  height:12rpx;
}
.product-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  padding: 166rpx 0 15rpx 0;
  width: 100%;
  height: 176rpx;
}
.productItem{
  margin: 10rpx;
  width: 30%;
  height: 70prx;
  line-height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  color: #777777;
  border: 1px solid #fc8238;
  border-radius: 10rpx;
}
.productIdist{
  margin: 12rpx 10rpx;
  width: 30%;
  height: 70prx;
  line-height: 70rpx;
  text-align: center;
  font-size: 24rpx;
  color: #777777;
  border: 1px solid #fc8238;
  border-radius: 10rpx;
}
.activeCate{
  color:#fc8238;
}
.active{
  background: #fc8238;
  color: #ffffff;
}
.lineContent{
  margin: 170rpx 10rpx 0 10rpx;
  width:90%;
  overflow-x: hidden;
}
.lineContent .item{
  position: relative;
  margin:20rpx 0;
  border-bottom: 1px solid #e5e5e5;
}
.lineContent .item .tag{
  position:absolute;
  background:rgba(0,0,0,0.5);
  font-size:24rpx;
  color:#ffffff;
  opacity:0.5;
  height:40rpx;
  line-height:40rpx;
  width:300rpx;
  text-align:center;
  overflow:hidden;
  border-top-left-radius:12rpx;
}
.lineContent .item .img .imgs{
  width: 100%;
  height:320rpx;
  border-radius: 12rpx;
}
.infomation{
  margin-top: 10rpx;
}
.infomation .regimentName{
  margin: 10rpx 0;
  font-size:36rpx;
  color:#2e2e2e;
}
.infomation .texto{
  margin: 10rpx 0;
  font-size:28rpx;
  color:#616161;
}
.infomation .texto .dataBox{
  margin:0 10rpx;
}
.infomation .infoBox{
  margin: 20rpx 0;
}
.infomation .infoBox .yuan{
  color: #fc8238;
  font-size:28rpx;
}
.infomation .infoBox .priceNum{
  color:#fc8238;
  font-size:40rpx;
}
.infomation .infoBox .yuanStart{
  margin-left:10rpx;
  font-size:28rpx;
  color:#616161;
}