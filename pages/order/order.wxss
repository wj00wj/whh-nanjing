Page{
  background: #f7f9fb;
}
.container{
  padding-bottom:40rpx;
}
.pageHeader {
position:fixed;
display:flex;
top:0;
width:100%;
flex-direction:column;
background:#ffffff;
z-index:1001;
}

.filters{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  box-shadow:0rpx 2rpx 10rpx #e9e4e4;
}
.filterItem{
  width:30%;
  text-align: center;
  font-size: 28rpx;
}
.filterItem .img{
  margin-left: 5rpx;
  width: 12rpx;
  height:12rpx;
}
.product-box {
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  align-items:center;
  padding:166rpx 0 15rpx 0;
  width:100%;
  height:176rpx;
}
.productItem {
margin:10rpx;
width:30%;
height:70prx;
line-height:70rpx;
text-align:center;
font-size:24rpx;
color:#777777;
border:1px solid #fc8238;
border-radius:10rpx;

}
.activeCate{
  color:#fc8238;
}
.active {
background:#fc8238;
color:#ffffff;
}
.lineContent{
  margin: 170rpx 10rpx 0 10rpx;
  width:90%;
}
.order-box{
  padding:20rpx;
  background: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx #e9e4e4;
  margin-top: 20rpx;
  border-radius: 20rpx;
}
.order-box .title-lineName{
  font-size:34rpx;
  padding: 4rpx 0px;
  color: #2c2c2c;
}
.order-box .order-num{
  font-size:28rpx;
  display:flex;
  flex-direction:row;
  margin: 8rpx 0rpx;
}
.order-num .con-left{
  width: 340rpx;
}
.order-num .into-des{
  color: #979797;
  width: 150rpx;
  display: inline-block;
}
.order-num .into-con{
   color:#646464;
}
.order-num .into-con-color{
   color:#ff9545;
}
.order-num .big-color{
  font-size: 34rpx;
}
.recond{
  display:inline-block;
  padding: 6rpx 10rpx;
  background: #ff9545;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-top: 6rpx;
}
.toLogin{
  margin-top:400rpx;
  width: 400rpx;
  height: 76rpx;
  color: #fff;
  background: #ffb446;
  text-align: center;
  line-height: 76rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
}