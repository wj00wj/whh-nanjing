/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 100rpx;
  box-sizing: border-box;
} 
.flexs{
  display: flex;
  flex-direction: row;
}
.loading{
  width:60rpx;
  height:60rpx;
}
.loadmore{
  display: flex;
  margin-top:180rpx;
  flex-direction: row;
  align-items: center;
  justify-content:  center;
  width: 100%;
  height: 100rpx;
  color: gray;
  font-size: 28rpx;
}
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
  background: #ffffff;
  width: 100%;
  height: 110rpx;
  z-index: 99;
}